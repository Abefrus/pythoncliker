<MenuScreen>:
    canvas.before:
        Color:
            rgba: rgba("#2057EE")
        Rectangle:
            pos: self.pos
            size: self.size  
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'
        Label:
            id: title_game
            text: 'Burn The Witch'
            color: "#EE6C26"
            font_name: 'assets/OleoScript-Bold.ttf'
            font_size: '30dp'
            size_hint_y: .2
        Image:
            source: 'assets/images/inquisitor.png'
            size_hint_y: .3
            allow_Stretch: True        
        Button: 
            text: "Play"
            background_color: "#FFB41F"
            background_normal: ""
            background_down: ''
            size_hint_y: .10     
            on_release: root.manager.current = "game"
        Button: 
            text: "Settings"
            background_color: "#FFB41F"
            background_normal: ""
            background_down: ''
            size_hint_y: .10
        
   
<GameScreen>
    BoxLayout:
        padding: '20dp'
        spacing: '20dp'
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Button:
                text: "X"
                size_hint_y: 0.05
                size_hint_x: 0.1
                pos_hint: {"x":0.03, "top": 1} 
                on_press: root.manager.current = 'menu'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.80
            Label:
                id: 'result'
                text: root.c_click
            Button:
                # background_color: 'assets/images/witch.png'
                on_press: self.size_hint_y = 0.7; self.size_hint_x = 0.7
                on_release: self.size_hint_y = 0.8; self.size_hint_x = 0.8
                on_press: root.clicker()
        BoxLayout:
            size_hint_y: 0.10


