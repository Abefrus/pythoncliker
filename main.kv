#: set main_color rgba("#2057EE")
#: set color_button "#FFB41F"

<ButtonMenu@Button>
    color: 
    font_size: '20dp'
    font_name: 'assets/OleoScript-Bold.ttf'
    size_hint_y: 0.2
    background_color: "#FFB41F"
    background_down:''

<Screen, ScreenManager>
    canvas.before:
        Color:
            rgba: main_color
        Rectangle:
            pos: self.pos
            size: self.size

<MenuScreen>:  
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '20dp'
        Label:
            id: title_game
            text: 'Burn The Witch'
        Image:
            source: 'assets/images/inquisitor.png'
            size_hint_y: .3
            allow_Stretch: True        
        ButtonMenu: 
            text: "Play"
            on_release: root.manager.current = "game"
        ButtonMenu: 
            text: "Settings"
   
<GameScreen>
    BoxLayout:  
        padding: '20dp'
        spacing: '20dp'
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .1
            ButtonMenu:
                text: "X"
                size_hint_y: .05
                size_hint_x: .2
                pos_hint: {"x":.03, "top": 1} 
                on_press: root.manager.current = 'menu'
            Label:
                id: 'result'
                text: "score: " + str(root.points)
                font_size: "40dp"
                color: "#FFB41F"
        FloatLayout:
            orientation: 'vertical'
            size_hint_y: .8
            Witch:
                id: witch
        BoxLayout:
            size_hint_y: .10
                
<Witch>:
    allow_stretch: True
    size_hint: None,None
    center: self.parent.center
    size: '200dp' ,'200dp'
    opacity: 0.0
